<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li> 
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>



<%= form_for(Message.new, class: "form-horizontal") do |f| %> 
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 control-label">名前:</div>
        <div class="col-sm-6"><%= f.text_field :name %></div>
        <div class="col-sm-4"></div>
       </div>
      
      <div class="row">
        <div class="col-sm-2 control-label">年齢</div>
        <div class="col-sm-6"><%= f.select :age,options_for_select((0..100).map{|num|["#{num}歳", num]}, selected: "25") %></div>
        <div class="col-sm-4"></div>
      </div>
      
      <div class="row">
        <div class="col-sm-2 control-label">性別</div>
        <div class="col-sm-1"><label><%= f.radio_button :sex, "男性" %>男</label></div>
        <div class="col-sm-1"><label><%= f.radio_button :sex, "女性" %>女</label></div>
        <div class="col-sm-8"></div>
       </div>
      
      <div class="row">
        <div class="col-sm-2 control-label">内容:</div>
        <div class="col-sm-10"><%= f.text_area :body, :size=>"70*10" %></div>
      </div>
    
      <div class="row">
        <div class="col-sm-3"><%= f.submit class: "btn btn-sm btn-warning" %></div>
        <div class="col-sm-9"></div>
      </div>
     </div>
<% end %>