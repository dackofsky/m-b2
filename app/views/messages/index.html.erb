<div class="panel panel-default">
  <div class="panel-heading">
   <h1>メッセージ一覧</h1> 
  </div>
  
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-primary"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
  <form class= "form-horizontal" role="form">  
    <div class="form-group">
      <div class="row">
        <div class="col-sm-2 control-label">名前:</div>
        <div class="col-sm-6"><%= f.text_field :name %></div>
        <div class="col-sm-4"></div>
      </div>
   
      <div class="row">
        <div class="col-sm-2 control-label">内容:</div>
        <div class="col-sm-10"><%= f.text_area :body, :size=>"70*10" %></div>
      </div>
  
      <div class="row">
        <div class="col-sm-3"><%= f.submit class: "btn btn-sm btn-warning" %></div>
        <div class="co;-sm-9"></div>
      </div>
    </div>
  </form>
<% end %>